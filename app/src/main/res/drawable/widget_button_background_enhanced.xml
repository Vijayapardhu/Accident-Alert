<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Active State (Driving Mode ON) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/emergency_color"
                android:endColor="@color/emergency_dark"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
    
    <!-- Inactive State (Driving Mode OFF) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/success_color"
                android:endColor="@color/primary_dark"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
    
</selector>
