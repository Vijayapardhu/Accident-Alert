<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/emergency_background"
    tools:context=".EmergencyConfirmationActivity">

    <!-- Emergency Header -->
    <LinearLayout
        android:id="@+id/emergency_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_emergency"
            android:tint="@color/emergency_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EMERGENCY DETECTED"
            android:textColor="@color/emergency_color"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Time remaining: 15 seconds"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergency_header" />

    <!-- Emergency Message -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emergency_message_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countdown_text">

        <TextView
            android:id="@+id/emergency_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:text="CRASH DETECTED!\n\nG-Force: 3.5g\nLocation: Getting GPS...\n\n⚠️ EMERGENCY ALERTS WILL BE SENT AUTOMATICALLY IN 15 SECONDS!\n\nIf you're OK, tap 'I'M OK' button NOW.\nIf you need help, tap 'EMERGENCY' button NOW."
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergency_message_card">

        <!-- I'm OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/im_ok_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/success_color"
            android:text="I'M OK"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="32dp" />

        <!-- Emergency Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emergency_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/emergency_color"
            android:text="EMERGENCY - SEND HELP"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_emergency"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="32dp" />

        <!-- Map Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/primary_color"
            android:text="🗺️ VIEW LOCATION ON MAP"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_emergency"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="24dp" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="If you don't respond within 15 seconds, emergency contacts will be automatically notified."
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_buttons_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
