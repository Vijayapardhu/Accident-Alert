<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Calling Test"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test emergency calling functionality including voice calls, SMS, and hospital calling"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Test Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/test_call_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/primary_color"
                android:text="Test Emergency Calls"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/test_sms_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/accent_color"
                android:text="Test SMS Sending"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/test_hospital_call_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/warning_color"
                android:text="Test Hospital Calls"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Status Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status will appear here..."
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:background="@color/card_background"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading status..."
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            android:background="@color/card_background"
            android:padding="12dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTRUCTIONS:\n\n1. Ensure you have emergency contacts added\n2. Grant all required permissions when prompted\n3. Test emergency calls (will make actual calls)\n4. Test SMS sending (simulation only)\n5. Test hospital calls (will call emergency numbers)\n\nNote: Emergency calls will make actual phone calls to your contacts!"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:background="@color/warning_background"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
